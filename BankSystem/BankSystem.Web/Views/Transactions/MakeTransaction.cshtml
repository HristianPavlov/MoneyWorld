@model BankSystem.DTO.MakeTransactionWithDropDownViewModel

@{
    ViewBag.Title = "title";
}
<h1>Make Transaction</h1>


@using (Html.BeginForm("MakeTransaction", "Transactions", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.TransactionModel.SenderBankAccountId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(
                 x => x.TransactionModel.SenderBankAccountId,
                 new SelectList(Model.BankAccounts.BankAccounts, "Id", "Id"), "")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TransactionModel.Amount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.TransactionModel.Amount, new { @class = "form-control", @type = "number", min = "0.00" , step = "0.01" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TransactionModel.Currency, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
        @Html.EnumDropDownListFor(
             x => x.TransactionModel.Currency,
             "Select Currency",
             new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TransactionModel.ReceiverBankAccountId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.TransactionModel.ReceiverBankAccountId, new { @class = "form-control", type="currency" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Make Transaction" />
        </div>
    </div>
}